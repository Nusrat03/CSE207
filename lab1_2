#include<stdio.h>
#include<math.h>
int main(){
  float a, b;
  printf("Enter the numbers : \n");
  scanf("%f%f", &a, &b);
  float *p_a, *p_b;
  p_a=&a, p_b=&b;
  if(*p_a>*p_b)
    {
      printf("%f is the maximum number \n",a);
    }
  else
    {
      printf("%f is the maximum number \n",b); 
    }
  return 0;
}
